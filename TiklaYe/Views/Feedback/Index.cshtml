@model IEnumerable<TiklaYe.Models.Feedback>

@{
    ViewData["Title"] = "Geri Bildirim";
    Layout = "_Layout";
}

<!-- feedback section -->
<section class="feedback_section layout_padding">
    <div class="container">
        <div class="col-12">
            <h2 class="contact-title">Geri Bildirim</h2>
        </div>
        <div class="col-lg-8">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            <form class="form-contact contact_form" method="post" id="contactForm" novalidate="novalidate">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <textarea class="form-control w-100" name="message" id="message" cols="30" rows="9" placeholder="Mesajınızı yazınız.." required></textarea>
                        </div>
                    </div>
                   <div class="col-12">
                        <div class="form-group">
                            <input class="form-control" name="subject" id="subject" type="text" placeholder="Konu" required>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- end feedback section -->