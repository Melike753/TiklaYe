<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900">
        <!-- Sidebar -->
        <aside class="z-20 hidden w-64 overflow-y-auto bg-white dark:bg-gray-800 md:block flex-shrink-0">
            <div class="py-4 text-gray-500 dark:text-gray-400">
                <a class="ml-6 text-lg font-bold text-gray-800 dark:text-gray-200" href="#">
                    Admin
                </a>
                <ul class="mt-6">
                    <li class="relative px-6 py-3">
                        <span class="absolute inset-y-0 left-0 w-1 bg-purple-600 rounded-tr-lg rounded-br-lg"
                              aria-hidden="true"></span>
                        <a class="inline-flex items-center w-full text-sm font-semibold text-gray-800 transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200 dark:text-gray-100"
                           asp-controller="Admin" asp-action="Index">
                            <i class="material-icons">home</i>
                            <span class="ml-4">Anasayfa</span>
                        </a>
                    </li>
                </ul>
                <ul>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
                           asp-controller="Category" asp-action="Index">
                            <i class="material-icons">view_list</i>
                            <span class="ml-4">Kategoriler</span>
                        </a>
                    </li>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
                           asp-controller="Product" asp-action="Index">
                            <i class="material-icons">fastfood</i>
                            <span class="ml-4">Ürünler</span>
                        </a>
                    </li>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
                           asp-controller="Status" asp-action="Index">
                            <i class="material-icons">directions_bike</i>
                            <span class="ml-4">Ürün Teslimat Durumu</span>
                        </a>
                    </li>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
                           asp-controller="User" asp-action="Index">
                            <i class="material-icons">people</i>
                            <span class="ml-4">Kullanıcılar</span>
                        </a>
                    </li>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
                           asp-controller="AdminFeedback" asp-action="Index">
                            <i class="material-icons">feedback</i>
                            <span class="ml-4">Geri Bildirimler</span>
                        </a>
                    </li>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
                           asp-controller="Admin" asp-action="SalesReport">
                            <i class="material-icons">description</i>
                            <span class="ml-4">Satış Raporu</span>
                        </a>
                    </li>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200"
                           asp-controller="Admin" asp-action="BusinessRequests">
                            <i class="material-icons">check_circle</i>
                            <span class="ml-4">İşletme Onay İşlemleri</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <div class="flex flex-col flex-1 w-full">
            <header class="z-10 py-4 bg-white shadow-md dark:bg-gray-800">
                <div class="container flex items-center justify-between h-full px-6 mx-auto text-purple-600 dark:text-purple-300">
                    <div class="flex justify-center flex-1 lg:mr-32"></div>
                    <ul class="flex items-center flex-shrink-0 space-x-6">
                        <!-- Profile menu -->
                        <li class="relative">
                            <button class="align-middle rounded-full focus:shadow-outline-purple focus:outline-none"
                                    onclick="toggleDropdown()" aria-label="Account" aria-haspopup="true">
                                <i class="material-icons">person</i>
                            </button>
                            <ul id="dropdownMenu"
                                class="dropdown-menu p-2 mt-2 space-y-2 text-gray-600 bg-white border border-gray-100 rounded-md shadow-md dark:border-gray-700 dark:text-gray-300 dark:bg-gray-700"
                                aria-label="submenu">
                                <li class="flex">
                                    <a class="inline-flex items-center w-full px-2 py-1 text-sm font-semibold transition-colors duration-150 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
                                       href="#">
                                        <i class="material-icons mr-2">account_circle</i>
                                        <span>Profilim</span>
                                    </a>
                                </li>
                                <li class="flex">
                                    <a class="inline-flex items-center w-full px-2 py-1 text-sm font-semibold transition-colors duration-150 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
                                       href="#">
                                        <i class="material-icons mr-2">settings</i>
                                        <span>Ayarlar</span>
                                    </a>
                                </li>
                                <li class="flex">
                                    <a class="inline-flex items-center w-full px-2 py-1 text-sm font-semibold transition-colors duration-150 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
                                       href="#">
                                        <i class="material-icons mr-2">exit_to_app</i>
                                        <span>Çıkış</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </header>

            <script>
                function toggleDropdown() {
                    const dropdownMenu = document.getElementById('dropdownMenu');
                    dropdownMenu.classList.toggle('show');
                }

                // Kullanıcı bunun dışını tıklarsa açılır menüyü kapat
                window.onclick = function (event) {
                    if (!event.target.matches('.material-icons')) {
                        const dropdowns = document.getElementsByClassName('dropdown-menu');
                        for (let i = 0; i < dropdowns.length; i++) {
                            const openDropdown = dropdowns[i];
                            if (openDropdown.classList.contains('show')) {
                                openDropdown.classList.remove('show');
                            }
                        }
                    }
                }
            </script>

            @RenderBody()

        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>

</html>