@model List<TiklaYe.Models.CartItem>

@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Ödeme İşlemleri- TıklaYe</title>
    <link rel="shortcut icon" href="/images/logo1.png">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #f9f9f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 40%;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin: 10px 0;
            width: 100%;
            text-align: center;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        .payment-section {
            margin-top: 20px;
            display: none;
        }

            .payment-section.active {
                display: block;
            }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input, .form-group select {
                width: 100%;
                padding: 8px;
                box-sizing: border-box;
            }


        .card-number-group {
            display: flex;
            flex-direction: column;
        }

        .card-number-input {
            display: flex;
            align-items: center;
        }

            .card-number-input input {
                flex: 1;
                margin-right: 10px;
            }

            .card-number-input i {
                font-size: 1.8rem;
            }

                .card-number-input i.mx-1 {
                    margin: 0 3px;
                }

        .checkbox-fade label {
            display: flex;
            align-items: center;
        }

        .text-inverse {
            font-size: 14px;
            color: #333;
        }

        .checkbox-fade input {
            width: 18px;
            height: 18px;
            margin-right: 10px;
        }

    </style>
    <script>
        function showPaymentSection(section) {
            document.getElementById('card-payment').classList.remove('active');
            document.getElementById('cod-payment').classList.remove('active');
            document.getElementById(section).classList.add('active');
        }
    </script>
</head>
<body>
    <div class="container">
        <h2>Ödeme Seçenekleri</h2>
        <button class="btn btn-primary" onclick="showPaymentSection('card-payment')">Kart ile Öde</button>
        <button class="btn btn-secondary" onclick="showPaymentSection('cod-payment')">Kapıda Öde</button>

        <div id="card-payment" class="payment-section">
            <h3>Ödeme</h3>
            <form asp-controller="Order" asp-action="CompleteOrder" method="post">
                <div class="form-group">
                    <label for="cardName">Kart Sahibinin Adı</label>
                    <input type="text" id="cardName" name="CardName" required />
                </div>
                <div class="form-group card-number-group">
                    <label>Kart Numarası</label>
                    <div class="card-number-input">
                        <input type="text" id="cardNumber" maxlength="16" name="CardNumber" required />
                        <i class="fab fa-cc-visa mx-1"></i>
                        <i class="fab fa-cc-mastercard mx-1"></i>
                        <i class="fab fa-cc-amex mx-1"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="expiryDate">Son Kullanma Tarihi (Ay/Yıl)</label>
                    <input type="text" id="expiryDate" name="ExpiryDate" placeholder="MM/YY" maxlength="5" required />
                </div>
                <div class="form-group">
                    <label for="cvv">CVV  <i class="fa fa-question-circle d-inline"></i></label>
                    <input type="text" id="cvv" name="CVV" maxlength="3" required />
                </div>
                <div class="form-group checkbox-fade">
                    <label>
                        <input type="checkbox" value="">
                        <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                        <span class="text-inverse">Sonraki siparişlerde daha hızlı ödeme yapabilmek için kartımı Masterpass'e kaydet.</span>
                    </label>
                </div>
                <p>Toplam Tutar: <strong>@ViewBag.TotalAmount</strong></p>
                <button type="submit" class="btn btn-primary">Siparişi Tamamla</button>
            </form>
        </div>

        <div id="cod-payment" class="payment-section">
            <h3>Kapıda Ödeme</h3>
            <form asp-controller="Order" asp-action="CompleteOrder" method="post">
                <div class="form-group">
                    <label for="deliveryAddress">Teslim Adresi</label>
                    <input type="text" id="deliveryAddress" name="DeliveryAddress" required />
                </div>
                <p>Toplam Tutar: <strong>@ViewBag.TotalAmount</strong></p>
                <button type="submit" class="btn btn-primary">Siparişi Tamamla</button>
            </form>
        </div>
    </div>
</body>
</html>