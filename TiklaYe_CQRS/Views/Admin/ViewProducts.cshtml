@model IEnumerable<TiklaYe_CQRS.Models.PartnerProduct>
@{
    var businessOwner = ViewBag.BusinessOwner as TiklaYe_CQRS.Models.BusinessOwner;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Ürünleri Görüntüle - Tıkla Ye</title>
    <link rel="shortcut icon" href="/images/logo1.png">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
            padding: 0;
        }

        h3 {
            margin-top: 10px;
            color: #dc3545;
            text-align:center;
            font-size: 1.4rem;
        }

        .table {
            margin-top: 20px;
            width: 100%;
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #dee2e6;
            text-align: center;
        }

        .table th {
            background-color: #dc3545;
            color: #ffffff;
            font-size:1.1rem;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .btn {
            background-color: #dc3545;
            color: #ffffff;
            border: none;
            padding: 6px 20px;
            cursor: pointer;
            border-radius: 4px;
            transition: all 0.3s ease-in-out;
        }

        .btn:hover {
            background-color: #c82333;
        }

        .img-thumbnail {
            width: 70px;
            height: auto;
        }
    </style>
</head>
<body>
    <h3>@businessOwner.RestaurantName - Ürünler</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Ürün Adı</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@Url.Content(product.ImageUrl)" alt="Görsel" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>Bulunamadı.</span>
                        }
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@(product.IsActive ? "Aktif" : "Pasif")</td>
                    <td>
                        <form method="post" asp-action="DeletePartnerProduct" asp-controller="Admin" asp-route-id="@product.ProductId" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>