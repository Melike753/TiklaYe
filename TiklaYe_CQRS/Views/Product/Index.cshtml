@model IEnumerable<TiklaYe_CQRS.Models.Product>

@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7f6;
            color: #333;
        }

        .container {
            width: 80%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 1.5rem;
            margin-top: 50px; /* Üstten boşluk ekledik */
            background-color: #fff;
            padding: 20px;
        }

        .card-header {
            background-color: #36104b;
            color: white;
            padding: 1.5rem;
            border-bottom: 1px solid #e5e5e5;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

            .card-header h4 {
                margin: 0;
                font-size: 1.3rem;
            }

            .card-header .btn {
                padding: 10px 20px; /* Butonun kenarları ile yazı arasında boşluk */
                background-color: #550a7e;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
                font-size: 1.2rem;
                text-decoration: none;
                display: inline-block; 
            }

                .card-header .btn:hover {
                    background-color: #833baa;
                }

        .card-block {
            padding: 1rem;
        }

        .table {
            width: 100%;
            color: #212529;
            border-spacing: 0 1rem; /* Satırlar arasına boşluk ekledik */
            border-collapse: separate;
        }

            .table thead th {
                background-color: #f8f9fa;
                border-bottom: 2px solid #dee2e6;
                text-align: center;
                font-size: 1.1rem;
            }

            .table tbody tr {
                background-color: #fff;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Satırlara gölge ekledik */
                line-height: 2; /* Satır yüksekliği */
                text-align: center;
            }

                .table tbody tr:hover {
                    background-color: #f1f1f1;
                    transition: background-color 0.3s ease;
                }

        .btn-primary, .btn-danger {
            color: white;
            border: none;
            transition: background-color 0.3s ease;
            display: inline-block;
            padding: 0.25rem 0.5rem;
            font-size: 1.05rem;
            border-radius: 0.2rem;
        }

        .btn-primary {
            background-color: #550a7e;
        }

            .btn-primary:hover {
                background-color: #833baa;
            }

        .btn-danger {
            background-color: #d40e00;
        }

            .btn-danger:hover {
                background-color: #ff1100;
            }

        .table img.img-thumbnail {
            border-radius: 5px;
            vertical-align: middle; /* Resmi dikey olarak ortala */
            padding-top: 10px; /* Üstten boşluk */
            padding-bottom: 10px; /* Altından boşluk */
        }

        form {
            display: inline-block; /* Formu butonlar gibi aynı hizaya getirmek için */
        }

    </style>
}

@{
    if (!ViewData.ModelState.IsValid)
    {
        foreach (var state in ViewData.ModelState)
        {
            foreach (var error in state.Value.Errors)
            {
                <div class="text-danger">@error.ErrorMessage</div>
            }
        }
    }
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4>Ürün Listesi</h4>
            <a class="btn btn-primary" asp-action="Create">Yeni Ürün Ekle</a>
        </div>
        <div class="card-block">
            <div class="row">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Açıklama</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Görsel</th>
                            <th>Kategori</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Description</td>
                                <td>@product.Price</td>
                                <td>@product.Quantity</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@Url.Content(product.ImageUrl)" alt="Görsel" class="img-thumbnail" style="width: 80px;" />
                                    }
                                    else
                                    {
                                        <span>Yok</span>
                                    }
                                </td>
                                <td>@product.Category?.Name</td> <!-- Kategori Adı -->
                                <td>@(product.IsActive ? "Aktif" : "Pasif")</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = product.ProductId })" class="btn btn-primary">Düzenle</a>
                                    <form asp-action="Delete" method="post" asp-route-id="@product.ProductId" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-danger">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        document.getElementById('ProductImage').addEventListener('change', function () {
            var file = this.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}