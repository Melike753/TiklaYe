@model IEnumerable<TiklaYe_CQRS.Models.BusinessOwner>

@{
    ViewData["Title"] = "Restoranlar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Restoranlar - Tıkla Ye</title>
    <link rel="shortcut icon" href="/images/logo1.png">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #8b0000;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            margin: 50px 0;
            text-align: center;
            font-size: 2.1rem;
            font-weight: 600;
            color: #fff;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 0 20px;
        }

        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            max-width: 1100px;
            margin: 0 auto;
        }

        .card {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 300px;
            padding: 20px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            text-align: center;
            overflow: hidden;
            position: relative;
            transform: scale(1);
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            }

        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 20px;
            overflow: hidden;
            position: relative;
        }

            .logo-container img {
                width: 100%;
                height: auto;
                object-fit: cover;
                border-radius: 50%;
                border: 2px solid #eee;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                transition: transform 0.3s, border-color 0.3s;
            }

                .logo-container img:hover {
                    transform: scale(1.1);
                    border-color: #007bff;
                }

        .card-content {
            padding: 0 10px;
        }

            .card-content h3 {
                margin: 0;
                font-size: 1.4rem;
                font-weight: 650;
                color: #333;
                margin-bottom: 15px;
            }

            .card-content a {
                display: inline-flex;
                align-items: center;
                font-size: 1rem;
                font-weight: 450;
                color: #8b0000;
                text-decoration: none;
                transition: color 0.3s;
            }

                .card-content a:hover {
                    color: #cd0000;
                }

                .card-content a i {
                    margin-right: 8px;
                }
    </style>
</head>
<body>
    <main class="h-full overflow-y-auto">
        <div class="container">
            <h2>
                Tüm Restoranlar
            </h2>
            <!-- Cards -->
            <div class="cards-container">
                @foreach (var businessOwner in Model)
                {
                    <!-- Card -->
                    <div class="card">
                        <div class="logo-container">
                            <img src="@businessOwner.LogoUrl" alt="Restaurant Logo">
                        </div>
                        <div class="card-content">
                            <h3>@businessOwner.RestaurantName</h3>
                            <a asp-action="PartnerProducts" asp-route-businessOwnerId="@businessOwner.BusinessOwnerId">
                                <i class="material-icons">visibility</i> Ürünleri Göster
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>