@model List<TiklaYe_CQRS.Models.CartItem>

@{
    Layout = null; // Bu sayfada layout kullanmayacağım
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Sepetim - TıklaYe</title>
    <link rel="shortcut icon" href="/images/logo1.png">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            overflow: hidden;
            padding: 20px;
        }

        .cart-card {
            padding: 20px;
            background: linear-gradient(135deg, #ece9e6, #ffffff);
            border-radius: 10px;
        }

        .text-title {
            font-size: 28px;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            margin: 20px 0;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 15px;
                text-align: center;
                border-bottom: 1px solid #dee2e6;
            }

            .table th {
                background-color: #f1f1f1;
                font-size: 15px;
            }

            .table img {
                border-radius: 4px;
            }

            .table tr {
                transition: background-color 0.3s ease;
            }

                .table tr:hover {
                    background-color: #f1f1f1;
                }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 14px;
            font-weight: 600;
            text-align: center;
            cursor: pointer;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: 1px solid transparent;
            margin-right: 10px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            border: 1px solid transparent;
        }

            .btn-danger:hover {
                background-color: #bd2130;
                transform: scale(1.05);
            }

        .cart-information {
            display: flex;
            flex-direction: column;
        }

        hr {
            border: none;
            border-top: 1px solid #dee2e6;
            margin: 20px 0;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            position: relative;
            width: 100%;
            max-width: 100%;
            font-size: 14px;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

            .alert-danger hr {
                border-top-color: #f5c6cb;
            }

        .alert-info {
            color: #0c5460;
            background-color: #d1ecf1;
            border-color: #bee5eb;
        }

            .alert-info hr {
                border-top-color: #bee5eb;
            }

        .total-price {
            font-size: 20px;
            font-weight: 700;
            text-align: right;
            margin-top: 20px;
        }

    </style>
</head>
<body>
    <div class="container">
        <section class="cart">
            <div class="cart-card">
                <div class="cart-information">
                    <div>
                        <h3 class="text-title">Sepetim</h3>
                    </div>
                    <hr />
                    <!-- Hataları görüntülemek için -->
                    @if (ViewData.ModelState != null && ViewData.ModelState.Any(m => m.Value.Errors.Count > 0))
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }
                    else if (Model != null && Model.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ürün</th>
                                    <th>Ürün Adı</th>
                                    <th>Fiyat</th>
                                    <th>Miktar</th>
                                    <th>Toplam</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.Name" width="60" />

                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.TotalPrice.ToString("C")</td>
                                        <td>
                                            <form asp-action="RemoveFromCart" method="post">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-danger">Sepetten Çıkar</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="total-price">
                            Toplam: @Model.Sum(i => i.TotalPrice).ToString("C")
                        </div>
                        <div>
                            <a asp-controller="Menu" asp-action="Restaurants" class="btn btn-primary">Alışverişe Devam Et</a>
                            <a asp-controller="Order" asp-action="Payment" class="btn btn-primary">Sepeti Onayla</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">Sepetinizde ürün bulunmamaktadır.</div>
                    }
                </div>
            </div>
        </section>
    </div>
</body>
</html>