@model IEnumerable<TiklaYe_CQRS.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7f6;
            color: #333;
        }

        .container {
            width: 80%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 1.5rem;
            margin-top: 50px; /* Üstten boşluk ekledik */
        }

        .card-header {
            background-color: #000033;
            color: #fff;
            padding: 1.5rem;
            border-bottom: 1px solid #e5e5e5;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .card-header h4 {
                margin: 0;
                font-size: 1.3rem;
            }

            .card-header .btn {
                padding: 10px 20px; /* Butonun kenarları ile yazı arasında boşluk */
                background-color: #000099;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
                font-size: 1.05rem;
            }

                .card-header .btn:hover {
                    background-color: #0000FF;
                }

        .card-block {
            padding: 1rem;
        }

        .table {
            width: 100%;
            color: #212529;
            border-spacing: 0 1rem; /* Satırlar arasına boşluk ekledik */
            border-collapse: separate;
        }

            .table thead th {
                background-color: #f8f9fa;
                border-bottom: 2px solid #dee2e6;
                text-align: center;
                font-size: 1.1rem;
            }

            .table tbody tr {
                background-color: #fff;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Satırlara gölge ekledik */
                line-height: 4; /* Satır yüksekliği */
                text-align: center;
            }


                .table tbody tr:hover {
                    background-color: #f1f1f1;
                    transition: background-color 0.3s ease;
                }

            .table img.img-thumbnail {
                border-radius: 5px;
            }

        .btn-primary {
            background-color: #000099;
            color: white;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0000FF;
            }

        .btn-danger {
            background-color: #d40e00;
            color: white;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #ff1100;
            }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 1.05rem;
            border-radius: 0.2rem;
        }

        .table img.img-thumbnail {
            border-radius: 5px;
            vertical-align: middle; /* Resmi dikey olarak ortala */
            padding-top: 10px; /* Üstten boşluk */
            padding-bottom: 10px; /* Altından boşluk */
        }

    </style>
}

<div class="container">
    <div class="pcoded-inner-content pt-0">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Kategoriler</h4>
                                <a class="btn btn-primary float-right" asp-action="Create">Yeni Kategori Ekle</a>
                            </div>
                            <div class="card-block">
                                <div class="row">
                                    <div class="col-12">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Kategori Adı</th>
                                                    <th>Görsel</th>
                                                    <th>Durum</th>
                                                    <th>İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var category in Model)
                                                {
                                                    <tr>
                                                        <td>@category.Name</td>
                                                        <td><img src="@Url.Content(category.ImageUrl)" alt="Görsel" class="img-thumbnail" style="width: 80px;" /></td>
                                                        <td>@(category.IsActive ? "Aktif" : "Pasif")</td>
                                                        <td>
                                                            <a href="@Url.Action("Edit", new { id = category.CategoryId })" class="btn btn-primary btn-sm">Düzenle</a>
                                                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                                                <input type="hidden" name="id" value="@category.CategoryId" />
                                                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        document.getElementById('CategoryImage').addEventListener('change', function () {
            var file = this.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}